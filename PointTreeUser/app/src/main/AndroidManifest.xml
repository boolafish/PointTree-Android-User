<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tw.com.pointtree.pointtreeuser">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.PointTreeActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.SearchActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.CardDetailActivity"
            android:label="@string/title_activity_card_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.UserQueryActivity"
            android:label="@string/title_activity_user_query"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.SendPointActivity"
            android:label="@string/title_activity_send_point"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.QRcodeActivity"
            android:label="@string/title_activity_qrcode"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.PhoneAuthActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
