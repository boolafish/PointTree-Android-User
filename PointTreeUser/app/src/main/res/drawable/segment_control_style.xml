<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- first element shape -->
    <item android:state_first="true" android:state_checked="false">
        <shape>
            <solid android:color="@color/white" />

            <stroke
                android:width="1dp"
                android:color="@color/colorSegmentControl" />

            <corners
                android:radius="0px"
                android:bottomLeftRadius="10dp"
                android:topLeftRadius="10dp" />
        </shape>
    </item>
    <item android:state_first="true" android:state_checked="true">
        <shape>
            <solid android:color="@color/colorSegmentControl" />

            <stroke
                android:width="1dp"
                android:color="@color/colorSegmentControl" />

            <corners
                android:radius="0px"
                android:bottomLeftRadius="10dp"
                android:topLeftRadius="10dp" />
        </shape>
    </item>
    <!-- last element shape -->
    <item android:state_last="true" android:state_checked="false">
        <shape>
            <solid android:color="@color/white" />

            <stroke
                android:width="1dp"
                android:color="@color/colorSegmentControl" />

            <corners
                android:radius="0px"
                android:bottomRightRadius="10dp"
                android:topRightRadius="10dp" />
        </shape>
    </item>
    <item android:state_last="true" android:state_checked="true">
        <shape>
            <solid android:color="@color/colorSegmentControl" />

            <stroke
                android:width="1dp"
                android:color="@color/colorSegmentControl" />

            <corners
                android:radius="0px"
                android:bottomRightRadius="10dp"
                android:topRightRadius="10dp" />
        </shape>
    </item>
    <!-- default shape -->
    <item android:state_checked="false">
        <shape>
            <solid android:color="@color/white" />

            <stroke
                android:width="1dp"
                android:color="@color/colorSegmentControl" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/colorSegmentControl" />

            <stroke
                android:width="1dp"
                android:color="@color/colorSegmentControl" />
        </shape>
    </item>
</selector>
