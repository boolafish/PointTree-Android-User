<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tw.com.pointtree.pointtreeuser.fragments.CardInfoFragment">

    <!-- TODO: should replace all text with real data from server -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/store_name"
                android:text="City Milk 城市首選 大安店"
                style="@style/AppTheme.CardDetailStoreTitle" />

            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:id="@+id/collection_view_pager" />

            <com.viewpagerindicator.CirclePageIndicator
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/circle_indicator"
                android:padding="10dip"
                app:fillColor="@color/colorCardDetailPagerIndicator" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/card_detail_horizontal_padding"
                android:paddingRight="@dimen/card_detail_horizontal_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/redemption_period"
                    style="@style/AppTheme.CardDetailInfoText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/redemption_period_from"
                    android:text="2016.01.01"
                    style="@style/AppTheme.CardDetailInfoText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/redemption_period_to"
                    style="@style/AppTheme.CardDetailInfoText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/redemption_period_to"
                    android:text="2016.10.20"
                    style="@style/AppTheme.CardDetailInfoText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/card_detail_horizontal_padding"
                android:paddingRight="@dimen/card_detail_horizontal_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/event_description"
                    style="@style/AppTheme.CardDetailInfoText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/event_description"
                    android:text="集滿十點可兌換35元飲料。集滿十點可兌換35元飲料。集滿十點可兌換35元飲料。"
                    style="@style/AppTheme.CardDetailInfoText" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="@dimen/card_detail_button_paddingBottom"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/redeem_button"
            style="@style/AppTheme.ButtonWithShadow"
            android:drawableStart="@drawable/redeem_item"
            android:paddingStart="@dimen/card_detail_redeem_button_padding"
            android:paddingEnd="@dimen/card_detail_redeem_button_padding"
            android:text="@string/redeem_item"
            android:textColor="@color/colorCardDetailPagerIndicator" />

        <Button
            android:id="@+id/send_button"
            style="@style/AppTheme.ButtonWithShadow"
            android:drawableStart="@drawable/send_friends"
            android:paddingStart="@dimen/card_detail_send_button_padding"
            android:paddingEnd="@dimen/card_detail_send_button_padding"
            android:text="@string/send_friends"
            android:textColor="@color/colorSegmentControl" />
    </LinearLayout>
</RelativeLayout>
