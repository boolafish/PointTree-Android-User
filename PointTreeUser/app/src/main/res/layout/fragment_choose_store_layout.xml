<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shadow_card"
    tools:context=".fragments.ChooseStoreFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_store"
        android:layout_marginTop="50dp"
        android:textColor="@color/colorCardDetailPagerIndicator"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

    <!-- TODO: should add search icon -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chosen_store"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" />

    <!-- TODO: should load data from server -->
    <ListView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:id="@+id/store_list"
        android:choiceMode="singleChoice"
        android:listSelector="@color/colorStoreSelected"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/confirm_store"
        android:enabled="false"
        android:text="@string/confirm"
        style="@style/AppTheme.ConfirmButton" />
</LinearLayout>
