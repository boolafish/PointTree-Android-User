<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.TitleBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:height">56dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="AppTheme.SearchBar">
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:height">40dp</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="android:background">@drawable/search_bar_style</item>
    </style>

    <style name="AppTheme.SearchBarInactive" parent="AppTheme.SearchBar">
        <item name="android:focusable">false</item>
    </style>

    <style name="AppTheme.SearchBarActive" parent="AppTheme.SearchBar">
        <item name="android:imeOptions">actionGo</item>
    </style>

    <style name="AppTheme.SegmentControl">
        <item name="android:textColor">@drawable/segment_control_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/segment_control_style</item>
    </style>

    <style name="AppTheme.CardDetailStoreTitle">
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.CardDetailInfoText">
        <item name="android:paddingTop">5dp</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- TODO: should support device that API level is below 21 -->
    <style name="AppTheme.ButtonWithShadow">
        <item name="android:layout_width">165dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:stateListAnimator">@drawable/shadow_button</item>
        <item name="android:background">@drawable/rounded_button</item>
    </style>

    <style name="ChooseFriendTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="ChooseFriendTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTabLayoutDefaultText</item>
    </style>
    
    <style name="AppTheme.ChooseFriendMainText">
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.ChooseFriendEditText">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:imeOptions">actionGo</item>
    </style>
</resources>
